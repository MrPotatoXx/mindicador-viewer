---
const { nombre, valor, unidad, slug } = Astro.props;
import { formatValor } from '../utils/format.js';
---

<a href={`/${slug}`} class="bg-white rounded-lg shadow p-4 text-center hover:shadow-lg hover:ring-2 hover:ring-blue-500 transition block">
  <h3 class="text-xl font-semibold">{nombre}</h3>
  <p class="text-3xl text-blue-600 mt-2">{formatValor(valor, unidad)}</p>
</a>
